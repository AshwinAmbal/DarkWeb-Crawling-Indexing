            (function() {
              var donate = document.getElementById('donate');

              donate.addEventListener('submit', function(e) {
                e.preventDefault();

                var amount = document.getElementById('amount');
                amount.value = amount.value.replace(/^\$/g, '');

                donate.submit();
              });
