<script>

	jQuery(document).ready(function($) {



		var ctx = {
			email : null,
			subscriptions : []
		};

		var groupSubscriptionsViews = 0;



		var $NLinput = $('.newsletter-sign-up-input');
		var $NLbutton = $('.newsletter-sign-up-button');



		///
		/// Validate onKeyUp Handler
		///

		var triggerValidation = null;

		$NLinput.unbind('keyup');
		$NLinput.on('keyup', function(event) {

			clearTimeout(triggerValidation);

			if (event.which === 13) {
				$NLbutton.click();
				return false;
			}

			triggerValidation = setTimeout(function() {
				$NLbutton.click();
			}, 500);

		});



		///
		/// Subscribe Button click Handler
		///

		$NLbutton.unbind();
		$NLbutton.on('click', function(event) {

			ctx.email = $NLinput.val();

			/// Run async series
			async.series([
				nlValidateEmail,
				nlGetMemberInfo,
				nlTestUnsub,
				nlGroupSubscriptions,
				nlAnalyticsTracking,
				nlSaveSubscriptions
			], function(result) {
				console.log(result);
			});

			function nlValidateEmail(next) {

				clearTimeout(triggerValidation);

				if (!ctx.email || !validator.isEmail(ctx.email)) {
					$NLinput.addClass('newsletter-sign-up-input-error');
					return next({
						error : 'NL: Invalid Email'
					});
				}

				$NLinput.removeClass('newsletter-sign-up-input-error');

				console.log('NL: Valid Email');
				return next();

			}

			function nlGetMemberInfo(next) {

				$('.newsletter-sign-up-button-text').hide();
				$('.newsletter-sign-up-button-loading').show();

				$.post('/newsletter-member-info', {
					email : ctx.email
				}, function(member) {

					$('.newsletter-sign-up-button-text').show();
					$('.newsletter-sign-up-button-loading').hide();

					ctx.member = JSON.parse(member);

					if (!ctx.member) {
						return next('NL: Error Getting Member Info');
					}

					if (ctx.member.status === 404) {
						console.log('NL: Member Info Not Found')
					} else {
						console.log('NL: Member Info Found');
					}

					return next();

				});

			}

			function nlTestUnsub(next) {

				/// They're a new member, skip this step
				/// because we have no info on them.
				if (ctx.member.status === 404) {
					console.log('NL: Skipping Unsub Test For Non-Member');
					return next();
				}

				var nonSubStatus = [
					'unsubscribed',
					'cleaned',
					'pending',
					'transactional'
				];

				if (nonSubStatus.indexOf(ctx.member.status) !== -1) {

					var msg = "It looks like you've signed up for content from us before GDPR rules came into effect.";
						msg += " Please click 'OK' to review and re-confirm your subscriptions.";

					var resub = confirm(msg);

					if (resub) {
						window.open('https://eepurl.com/bMg5kH', '_blank');
						//location.href = 'https://eepurl.com/bMg5kH';
					}

					return next('NL: Unsub Test Failed. Redirecting to MC form ...');

				} else {

					console.log('NL: Unsub Test OK');
					return next();

				}

			}

			function nlGroupSubscriptions(next) {

				$NLbutton.removeAttr('disabled');

				groupSubscriptionsViews++;

				var upcomingID = '576c2bf774';
				var surveysID = '847abf7002';
				var weeklyID = 'd60fc24015';
				var eventsID = '83fcab22d0';
				var servicesID = '2eccd0f9ad';

				/// Check if they're already subscribed
				/// to all of the groups.
				if (ctx.member.interests) {
					if (
						ctx.member.interests[upcomingID] &&
						ctx.member.interests[surveysID] &&
						ctx.member.interests[weeklyID] &&
						ctx.member.interests[eventsID] &&
						ctx.member.interests[servicesID]
					) {
						if (groupSubscriptionsViews === 1) {
							return next('NL: Member already subscribed to all groups.');
						} else {
							groupSubscriptionsViews = 0;
							return next();
						}
					}
				}

				$('.newsletter-sign-up-subscriptions').show();

				/// Hide groups already subscribed
				if (ctx.member.interests) {

					console.log(ctx.member.interests);

					if (ctx.member.interests[upcomingID]) {
						console.log('NL: Already Subscribed To Upcoming Ebooks');
						$('.nl-subs-upcoming').remove();
					}

					if (ctx.member.interests[surveysID]) {
						console.log('NL: Already Subscribed To Surveys');
						$('.nl-subs-surveys').remove();
					}

					if (ctx.member.interests[weeklyID]) {
						console.log('NL: Already Subscribed To Weekly');
						$('.nl-subs-weekly').remove();
					}

					if (ctx.member.interests[eventsID]) {
						console.log('NL: Already Subscribed To Events');
						$('.nl-subs-events').remove();
					}

					if (ctx.member.interests[servicesID]) {
						console.log('NL: Already Subscribed To Services');
						$('.nl-subs-services').remove();
					}

				}

				$('#nl-subs-all').click(function() {
					var c = this.checked;
					$(':checkbox').prop('checked',c);
				});

				/// Bork-out if this is the first time this screen
				/// has been displayed.
				if (groupSubscriptionsViews === 1) {
					return next('NL: Pausing For Subscriptions Choices');
				}

				/// This is the second pass on this screen so
				/// tally up any subscriptions ...
				$('input[name=nl-subs]:checked').each(function(){
					ctx.subscriptions.push($(this).val());
				});

				/// Subscription Results
				console.log('NL: Group Subscriptions Done');
				console.log(ctx.subscriptions);

				groupSubscriptionsViews = 0;
				return next();

			}

			function nlAnalyticsTracking(next) {

				/// GA Tracking
				// ga('send', 'pageview', '/ebooks/download/' + seriesSlug + '/' + bookSlug + '/' + ctx.format);
				// ga('send', 'event', seriesSlug, 'Download', bookSlug);
				// ga('send', 'pageview', '/ebookseries/series-' + ctx.seriesNum + '/book-' + ctx.bookNum + '/downloads/');

				/// Facebook Tracking
				// fbq('track', 'Lead', {
				// 	content_name: 'eBook Pre-Order',
				// 	content_category: 'Series: ' + seriesSlug + ', Book: ' + bookSlug,
				// 	value: 1,
				// 	currency: 'n/a'
				// });

				/// Adroll Tracking
				// try {
				// 	__adroll.record_user({ 'adroll_segments' : 'd03cbef2' });
				// } catch(error) {
				// 	console.log(error);
				// }

				console.log('NL: Analytics Not Implemented');

				return next();

			}

			function nlSaveSubscriptions(next) {

				$.post('/newsletter-sign-up-submit', {
					email : ctx.email,
					subscriptions : ctx.subscriptions
				}, function(result) {

					console.log(result);

					if (result === 'ERROR') {
						alert('An error occurred, please try again shortly.');
						return next('NL: Error Saving Subscriptions');
					}

					$('.newsletter-sign-up-input').val('');
					alert('Thank you for subscribing.');

					$('.nl-subs-option').prop('checked', false);
					$NLinput.val('');
					$('.newsletter-sign-up-subscriptions').hide();

					return next('NL: Subscriptions Saved');

				});

			}

		});

		/// Uncheck 'Send me everything' when sub-choice is uncheked.
		$('.nl-subs-option').on('change', function(event) {
			if (!this.checked) {
				$('#nl-subs-all').prop('checked', false);
			}
		});

	});

</script>
</div>
